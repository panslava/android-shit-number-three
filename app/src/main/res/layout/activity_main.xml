<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecedf1"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="174dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corners"
        >
        <ImageView
            android:id="@+id/main_profileImg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artem Ka"
            android:textColor="#000000"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_profileImg"
            app:layout_constraintLeft_toRightOf="@id/main_profileImg"
            app:layout_constraintTop_toTopOf="@+id/main_profileImg"
            android:layout_marginLeft="8dp"
            />


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/post_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_profileImg"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="15 комментариев"
            android:textSize="13sp"
            android:textColor="#35000000"
            app:layout_constraintTop_toBottomOf="@id/post_image"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"

            />

        <ImageView
            android:id="@+id/ic_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_comments"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            marginbo
            android:src="@drawable/ic_heart"/>

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toRightOf="@+id/ic_like"
            app:layout_constraintTop_toTopOf="@id/ic_like"
            android:src="@drawable/ic_share"
            android:layout_marginLeft="24dp"
            />
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="@id/ic_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="228dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>